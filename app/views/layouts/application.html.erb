<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Browsing <%= @uri %> | <%= title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <%= stylesheet_link_tag "application" %>
  </head>
  <body>
    <header>
      <nav class="navbar bg-dark fixed-top bg-body-tertiary" data-bs-theme="dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/"><%= title %></a>
          <a href="<%= @uri %>" class="navbar-text"><%= @uri %></a>
        </div>
      </nav>
    </header>
    <main class="container">
      <div class="row">
        <div class="col">
          <pre>
<%= yield %>
          </pre>
        </div>
      </div>
    </main>
    <footer class="navbar bg-dark fixed-bottom bg-body-tertiary" data-bs-theme="dark">
      <div class="container-fluid">
        <span class="navbar-text">This is a proxied version of the original Gopher page by <a href="https://github.com/rubenarakelyan/gaufre" target="_blank">Gaufre</a> v<%= version %>.</span>
      </div>
    </footer>
  </body>
</html>
